<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/spotify_black" />
            <corners android:bottomRightRadius="24dp"
                android:bottomLeftRadius="24dp"
                android:topRightRadius="24dp"
                android:topLeftRadius="24dp"/>

            <stroke
                android:width="4dp"
                android:color="@color/twitter_extralightgrey" />

        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/twitter_extralightgrey" />
            <corners android:bottomRightRadius="24dp"
                android:bottomLeftRadius="24dp"
                android:topRightRadius="24dp"
                android:topLeftRadius="24dp"/>

            <stroke
                android:width="3dp"
                android:color="@color/spotify_green" />

        </shape>
    </item>
</selector>
